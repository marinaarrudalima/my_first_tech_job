<div class="container mt-5 mb-5">
  <div class="container-name-company">
    <div class="left-column">
      <p class="banner-text mb-1"><%= @job.title %></p>
      <p class="banner-text-small">at <%= @job.company.name %></p>
      <div class="carddeadline mb-4"><strong>Application deadline:</strong> <%= @job.application_deadline.strftime('%d %b %Y') %></div>
    </div>

    <%# #não está funcionando por aqui o "if current_user.role_candidate? ou o abaixo. Travei aqui pra poder fazer outras coisas. ass: Be" %>
    <%# <% if current_user && current_user.role_company != nil %>
      <div class="right-column">
        <div>
          <p><%= raw @content %></p>
        </div>
      </div>
    <%# end %>
  </div>


  <div>
    <p class="description mt-5"><strong>Job Description:</strong> <%= @job.job_description %></p>
  </div>

  <div class="container-card d-flex justify-content-center ">
    <div class="card-job">
      <div class="box-job">
        <div class="content-job">
          <h3 class="title-job mb-3"><strong>Location:</strong></h3>
          <p><%= @job.location %></p></li>
        </div>
      </div>
    </div>

   <div class="card-job">
      <div class="box-job">
        <div class="content-job">
          <h3 class="title-job mb-3"><strong>Tech Languages:</strong></h3>
          <% @job.programming_languages.each do |item| %>
           <p><%= item %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="card-job">
      <div class="box-job">
        <div class="content-job">
          <h3 class="title-job mb-3"><strong>Benefits:</strong></h3>
          <p><strong>Salary:</strong> <%= @job.salary %></p>
          <p><strong>Work Visa:</strong> <%= @job.work_visa %></p>
          <p><%= @job.benefits %></p>
        </div>
      </div>
    </div>

    <div class="card-job">
      <div class="box-job">
        <div class="content-job">
          <h3 class="title-job mb-3"><strong>Soft Skills:</strong></h3>
          <p><%= @job.soft_skills %></p>
        </div>
      </div>
    </div>
  </div>

  <% if current_user && current_user.role_candidate? && current_user.candidate.matches.where(job: @job).count.zero? %>
    <%= simple_form_for [@job, @match] do |f| %>
      <div class="container-btn">
        <div class="row justify-content-center">
          <%= f.submit "APPLY FOR THIS JOB", class: "btn-apply justify-content-center col-md-3" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

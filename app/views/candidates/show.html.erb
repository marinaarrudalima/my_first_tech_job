<div class="profile-container">
  <div class="profile-banner">
    <div class="name-photo">
    <% unless @candidate.photo.attached? %>
      <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png", class: "avatar-profile" %>
    <% else %>
      <%= cl_image_tag @candidate.photo.key, gravity: :face, class: "avatar-profile"%>
    <% end %>
    <h1><%= @candidate.first_name %> <%= @candidate.last_name %></h1>
    </div>
  </div>

  <div class="profile-body">
    <div class="body-column">
    <h4> &lt;/ &gt; Basic Information</h4>
      <div class ="column-card">
        <strong>Summary</strong><br><br>
        <%= @candidate.summary %>
      </div>
      <div class ="column-card">
        <strong>Resum√©</strong><br><br>
        <%= link_to 'Check your CV', rails_blob_url(@candidate.cv_upload, disposition: "attachment"), target: "_blank", class: "btn-dark" %>
      </div>
    </div>
    <div class="body-column">
    <div class="column-intro">
      <h4> &lt;/ &gt; Skills</h4>
    </div>
      <div class="column-card">
        Looking for opportunities in the following areas:<br>
        <ul>
        <% @candidate.tech_interest.each do |i|%>
          <br><strong><%= i %> </strong>
        <% end %>
        </ul>
      </div>
      <div class ="column-card">
        Proficient in the following programming languages:<br>
        <ul>
        <% @candidate.tech_languages.each do |i| %>
          <br><strong><%= i %></strong>
        <% end %>
      </div>
    </div>
  </div>
</div>

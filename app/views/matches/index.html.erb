<% if current_user.company %>
  <div class="container">
    <h2><strong>Matches for Job <%= @job.title %></h2></strong>

    <div class="card-matches-job-container">
      <% @matches.each do |match| %>
        <div class="card-match-job">
          <div class="card-match-job-info">
          <%= link_to candidate_path(match.candidate) do %>
            <%= cl_image_tag match.candidate.photo.key %>
          <% end %>
            <div class="candidate-details">
                  <p>
                  <strong>Candidate:</strong> <%= match.candidate.first_name %> <%= match.candidate.last_name %></p>
                  <p><strong>Application status:</strong> <%= match.status.gsub(/_/,' ') %></p>
                  <%= simple_form_for match do |f| %>
                    <div class = "match-change">
                    <%= f.input :status, label: false, collection: Match.statuses.keys, class:"statuses-collection" %>
                    <%= f.submit "Change", class:"btn-change" %>
                    </div>
                    <div class="buttons-match-job">
                    <%= link_to 'View Profile', candidate_path(match.candidate), class: "btn-dark" %>
                    <%= link_to 'View CV', rails_blob_url(match.candidate.cv_upload, disposition: "attachment"), target: "_blank", class: "btn-dark" %></div>
                  <% end %>
                </li>
              </ul>
              <div class="doa-match-job">Date of application: <%= match.candidate.created_at.strftime("%d %b %Y %H:%M") %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
